<?import javafx.scene.layout.AnchorPane?>

<Scene xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.control.LoginControl" onKeyPressed="#checkKey" >
	<AnchorPane >
		<ImageView layoutX="20" layoutY="20" fitHeight="280" fitWidth="340" />
		<TextField fx:id="txtUser" layoutX="10" layoutY="300" promptText="Username" />
		<PasswordField fx:id="txtPassword" layoutX="170" layoutY="300" promptText="Password" />
		<Button fx:id="btnLogin" text="Login" onAction="#validateLogin" layoutX="330" layoutY="300" />
	</AnchorPane>
</Scene>

